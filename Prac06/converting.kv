<label>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    color: 0, 0, 0, 1

BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '34'
            font_size: 48
            multiline: False
        BoxLayout
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_increment(+1)
                on_press: app.handle_calculate(int(input_number.text))
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)
                on_press: app.handle_calculate(int(input_number.text))
    Label:
        id: output_label
        text: '54.717'